<main>
  <h1 class="h1"><%= t(".heading") %></h1>

  <%= form_with(model: @user, url: account_path, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :email_address %>
    <%= form.email_field :email_address %>
  </div>
  <div class="form-group">
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>
  <div class="form-group">
    <%= form.submit t("forms.buttons.create_account") %>
  </div>
<% end %>
</main>
