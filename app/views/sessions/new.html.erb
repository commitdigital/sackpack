<main>

<h1 class="h1"><%= t(".heading") %></h1>

<%= form_with url: session_path do |form| %>
  <%= form.label :email_address %>
  <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "username", value: params[:email_address] %><br>
  <%= form.label :password %>
  <%= form.password_field :password, required: true, autocomplete: "current-password", maxlength: 72 %><br>
  <%= form.submit t("forms.buttons.sign_in") %>
<% end %>
<br>

<%= link_to t("sessions.new.forgot_password"), new_password_path %>

</main>
